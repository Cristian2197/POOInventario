@model IEnumerable<Capa_de_Entidades.ProductoE>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<button id="btnProducto" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalCrear">
    Crear Producto
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_producto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_proveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio_compra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio_venta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.can_existente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.num_lote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_categoria)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_proveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_compra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_venta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.can_existente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.num_lote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_categoria)
            </td>
            <td>
                <a href="#" class="btn btn-warning Editar" id="@item.id_producto" name="@item.id_producto" data-toggle="modal" data-target="#ModalEditar">Editar</a>


            </td>
            <td>
                <button id="@item.id_producto" type="button" class="btn btn-danger btnEliminarRol" data-toggle="modal" data-target="#ModalEliminar">
                    Eliminar
                </button>
            </td>
            <td>
                <button id="@item.id_producto" type="button" class="btn btn-dark btnComprar" data-toggle="modal" data-target="#ModalComprar">
                    Comprar
                </button>
            </td>

        </tr>



    }

</table>
<!-- Modal Crear Rol-->
<div class="modal fade" id="ModalCrear" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="dvCreaProducto"></div>
            </div>

        </div>
    </div>
</div>
<!-- Modal Modificar-->
<div class="modal fade" id="ModalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="dvModificarProducto"></div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Eliminar-->
<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="dvEliminarProducto"></div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Comprar-->
<div class="modal fade" id="ModalComprar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Comprar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="dvComprar"></div>
            </div>

        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnProducto").click(function () {
                var _url = '/Productos/Crear';
                $.ajax({
                    type: "Get",
                    url: _url,
                    data: {},
                    async: false,
                    success: function (response) {
                        $('#dvCreaProducto').html(response);
                    },
                    error: function (response) {
                        if (response.responseText != "") {
                            alert(response.responseText);
                        }
                    }
                });
            });
        });
        $(document).ready(function () {
            $(".Editar").on("click", function () {
                var clienteId = $(this).attr("id");
                var _url = '/Productos/Editar/' + clienteId;
                $.ajax({
                    type: "Get",
                    url: _url,
                    data: {},
                    async: false,
                    success: function (response) {
                        $('#dvModificarProducto').html(response);
                    },
                    error: function (response) {
                        if (response.responseText != "") {
                            alert(response.responseText);
                        }
                    }
                });
            });
            $(document).ready(function () {
                $(".btnEliminarRol").click(function () {
                    var RolId = $(this).attr("id");
                    var _url = '/Productos/Eliminar/' + RolId;
                    $.ajax({
                        type: "Get",
                        url: _url,
                        data: {},
                        async: false,
                        success: function (response) {
                            $('#dvEliminarProducto').html(response);
                        },
                        error: function (response) {
                            if (response.responseText != "") {
                                alert(response.responseText);
                            }
                        }
                    });
                });
            });
        });
         $(document).ready(function () {
             $(".btnComprar").click(function () {
                var id= $(this).attr("id");
                var _url = '/Productos/Comprar/'+id;
                $.ajax({
                    type: "Get",
                    url: _url,
                    data: {},
                    async: false,
                    success: function (response) {
                        $('#dvComprar').html(response);
                    },
                    error: function (response) {
                        if (response.responseText != "") {
                            alert(response.responseText);
                        }
                    }
                });
            });
        });
    </script>
}


