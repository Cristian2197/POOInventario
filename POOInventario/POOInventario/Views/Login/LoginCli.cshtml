@model Capa_de_Entidades.ClienteE

@using (Html.BeginForm("AutorizarCli", "Login", FormMethod.Post))
{
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <center><img src="../img/PepitoLogo.png" id="icon" alt="User Icon" width="300px" /></center>
            </div>
            <br />
            <br />
            <!-- Login Form -->
            <form>
                @*<input type="text" id="login" class="fadeIn second" name="login" placeholder="login">*@
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Ingrese su nombre de Usuario" } })
                @Html.ValidationMessageFor(model => model.nombre)
                <br />
                @*<input type="text" id="password" class="fadeIn third" name="login" placeholder="password">*@
                @Html.EditorFor(model => model.numero_tarjeta, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Ingrese su número de tarjeta" } })
                @Html.ValidationMessageFor(model => model.numero_tarjeta)
                <br />
                <button type="submit" class="list-group-item list-group-item-action list-group-item-dark"><center>Iniciar sesión</center></button>
            </form>

            <!-- Remind Passowrd -->
            @*<div id="formFooter">
                <a class="underlineHover" href="#">Forgot Password?</a>
            </div>*@

        </div>
    </div>
}