@model Capa_de_Entidades.ClienteE

@using (Html.BeginForm("AutorizarCli", "Login", FormMethod.Post))
{
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->
            <form>
                @*<input type="text" id="login" class="fadeIn second" name="login" placeholder="login">*@
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @Placeholder = "nombre" } })
                @Html.ValidationMessageFor(model => model.nombre)
                @*<input type="text" id="password" class="fadeIn third" name="login" placeholder="password">*@
                @Html.EditorFor(model => model.numero_tarjeta, new { htmlAttributes = new { @class = "form-control", @Placeholder = "numero de tarjeta" } })
                @Html.ValidationMessageFor(model => model.numero_tarjeta)
                <input type="submit" class="fadeIn fourth" value="Log In">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="#">Forgot Password?</a>
            </div>

        </div>
    </div>
}